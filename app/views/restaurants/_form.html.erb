<%= form_for(@restaurant, html: { class: 'nice'}) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'input-text' %>
  </div>
  <div class="field">
    <%= f.label :location, class: 'input-medium' %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%# f.number_field :rating %>
    <%= radio_button_tag(:rating, "1") %>
    <%= label_tag(:rating_1, "Meh") %>
    <%= radio_button_tag(:rating, "2") %>
    <%= label_tag(:rating_2, "Nom") %>
    <%= radio_button_tag(:rating, "3") %>
    <%= label_tag(:rating_3, "Amazinggg") %>
  </div>
  <div class="field">
    <%= f.label :review %><br />
    <%= f.text_area_tag(:review, "Write review here...", :size => "24x6") %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
